<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#6DA6C7CA"

    app:cardElevation="10dp">
    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/fon11" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="420dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/emailField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:text=""
            android:textColor="#706C6C"
            tools:ignore="MissingClass"
            />




        <EditText
            android:id="@+id/nameField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Name"
            android:inputType="text"
            android:text=""
            android:textColor="#6E6A6A"
             />
        <EditText
            android:id="@+id/passField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:inputType="textPassword"
            android:text=""
            android:textColor="#6E6A6A"
            android:layout_below="@+id/emailField"

            />
        <EditText
            android:id="@+id/repass1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:hint="Retype Password"
            android:text=""
            android:textColor="#2B2B2B"
            android:layout_below="@+id/passField"/>

        <EditText
            android:id="@+id/phoneField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Telephone number"
            android:inputType="phone"
            android:text=""
            android:textColor="#656161" />

        <Button
            android:id="@+id/btnSign1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/passField"
            android:layout_marginTop="50dp"
            android:backgroundTint="#71424D"
            android:text="Sign up"
            app:rippleColor="#F3F3F3" />


    </LinearLayout>

    <Button
        android:id="@+id/btnLog1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:backgroundTint="@color/zer"
        app:iconTint="#8E1313" />

    <ImageView
        android:id="@+id/back"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="#00FFFFFF"
        app:srcCompat="@drawable/nazad" />
</RelativeLayout>